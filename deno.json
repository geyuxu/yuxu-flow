{
  "nodeModulesDir": "auto",
  "imports": {
    "@std/path": "jsr:@std/path@^1",
    "@std/fs": "jsr:@std/fs@^1",
    "@std/crypto": "jsr:@std/crypto@^1",
    "@std/yaml": "jsr:@std/yaml@^1",
    "marked": "npm:marked@^17"
  },
  "tasks": {
    "build": "deno run -A scripts/cli.ts build",
    "build:photos": "deno run -A scripts/cli.ts build --photos",
    "build:static": "deno run -A scripts/cli.ts build --static",
    "build:medium": "deno run -A scripts/cli.ts build --medium",
    "serve": "deno run -A scripts/cli.ts serve",
    "setup": "deno run -A scripts/cli.ts setup",
    "init": "deno run -A scripts/cli.ts init",
    "clean": "deno run -A scripts/cli.ts clean",
    "compile": "deno compile --output staticflow --allow-all scripts/cli.ts"
  },
  "compilerOptions": {
    "strict": true
  }
}
